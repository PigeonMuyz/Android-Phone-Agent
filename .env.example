# =====================================================
# Android Phone Agent 环境变量配置
# =====================================================
# Profile 定义在 config/profiles.yaml
# .env 仅存放 API Keys 和全局配置
# =====================================================

# ===== API Keys =====

# 火山方舟 (豆包/DeepSeek)
VOLCANO_API_KEY=your-volcano-api-key

# OpenAI (可选)
# OPENAI_API_KEY=sk-xxx

# DeepSeek 官方 (可选)
# DEEPSEEK_API_KEY=sk-xxx

# Anthropic (可选)
# ANTHROPIC_API_KEY=sk-ant-xxx

# Google Gemini (可选)
# GOOGLE_API_KEY=xxx

# OpenRouter (可选)
# OPENROUTER_API_KEY=xxx

# ===== 全局配置 =====

# 默认 Profile 名称 (与 profiles.yaml 中的 key 对应)
PHONE_AGENT_DEFAULT_PROFILE=volcano_deepseek_v3

# 配置文件路径
PHONE_AGENT_PROFILES_CONFIG_PATH=config/profiles.yaml

# ===== 计费配置 =====

PHONE_AGENT_BILLING_ENABLED=true
PHONE_AGENT_BILLING_CONFIG_PATH=config/pricing.yaml

# ===== 日志配置 =====

PHONE_AGENT_LOG_LEVEL=INFO
# PHONE_AGENT_LOG_FILE=logs/agent.log

# ===== App 缓存配置 =====

PHONE_AGENT_APP_CACHE_DIR=.cache/apps
PHONE_AGENT_APP_CACHE_TTL=3600

# ===== Agent 配置 =====

# 最大执行步数
PHONE_AGENT_MAX_STEPS=50

# 动作执行后等待时间（秒）
PHONE_AGENT_ACTION_DELAY=3.0

# 每步后暂停等待用户确认
PHONE_AGENT_PAUSE_ON_ACTION=false

# 每 N 步执行一次历史摘要以节约成本（0=不摘要）
PHONE_AGENT_SUMMARIZE_INTERVAL=5
